<div class="flex flex-col items-center justify-center h-screen bg-gray-100">
  <div class="w-full max-w-sm p-8 bg-white rounded-xl shadow-md border border-blue-600">
    <h2 class="text-center text-blue-600 text-3xl font-bold mb-6">Sign In</h2>

    <% if flash[:alert] %>
      <div class="text-red-600 text-sm text-center mb-4"><%= flash[:alert] %></div>
    <% end %>

    <% if flash[:notice] %>
      <div class="text-green-600 text-sm text-center mb-4"><%= flash[:notice] %></div>
    <% end %>

    <%= form_with url: sign_in_path, local: true, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :email, class: "block text-gray-600 font-semibold mb-2" %>
        <%= form.email_field :email, autofocus: true, autocomplete: "username", placeholder: "Enter your email", value: params[:email], class: "w-full mt-1 px-3 py-2 border border-black rounded-xl focus:outline-none focus:ring focus:ring-blue-300" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-gray-600 font-semibold mb-2" %>
        <%= form.password_field :password, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "w-full mt-1 px-3 py-2 border border-black rounded-xl focus:outline-none focus:ring focus:ring-blue-300" %>
      </div>

      <div>
        <%= form.submit "Sign In", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-xl transition duration-200" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-sm text-gray-600">
      Forgot your password?
      <%= link_to "Reset it", new_password_path, class: "text-blue-600 hover:underline" %>
    </p>

    <p class="mt-2 text-center text-sm text-gray-600">
      Don't have an account?
      <%= link_to "Sign Up", sign_up_path, class: "text-blue-600 hover:underline" %>
    </p>
  </div>
</div>
